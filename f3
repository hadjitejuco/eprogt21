//functions with args(parameters) no return value
#include <stdio.h>
//prototyping 
void simpint(float, float, float);   //UDF
int main(){
	float p,r,t; //local var 
	printf ("Enter principal, rate and time ");
	scanf ("%f%f%f",&p,&r,&t);
	simpint(p,r,t);	//calling the function
	return 0;
}
void simpint(float a, float b, float c){
	float si;  //local var for simpint
	si = (a*b*c)/100;
	printf ("interest is %f", si);
}


