#include <stdio.h>
#include <stdlib.h>
int main(){
	int choice, x, y;
	while(1){		//while true
		system ("cls");	//clear the screen
		printf ("**********************\n");
		printf ("MENU\n");
		printf ("**********************\n");
		printf ("[1] - Addition\n");
		printf ("[2] - Subtraction\n");
		printf ("[3] - Multiplication\n");
		printf ("[4] - Division\n");
		printf ("[5] - Exit\n");
		printf ("**********************\n");
		printf ("Enter your choice ");
		scanf ("%d",&choice);
		switch(choice){
			case 1: 
				printf ("Enter two numbers ");
				scanf ("%d%d",&x,&y);
				printf ("The sum is %d",x+y);
				break;
			case 2: 
				printf ("Enter two numbers ");
				scanf ("%d%d",&x,&y);
				printf ("The diff is %d",x-y);
				break;
			case 3: 
				printf ("Enter two numbers ");
				scanf ("%d%d",&x,&y);
				printf ("The prod is %d",x*y);
				break;
			case 4: 
				printf ("Enter two numbers ");
				scanf ("%d%d",&x,&y);
				printf ("The quotient is %d",x/y);
				break;
			case 5: 
				exit(1);
			default: 
				printf ("Invalid input ");
		}
		system ("pause>0");		//pause>0	
	}
	return 0;
}
